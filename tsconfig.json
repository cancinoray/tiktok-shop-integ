{
  "version": "0.0.1",
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["es5", "es6"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": false
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "__tests__/**/*"]
}